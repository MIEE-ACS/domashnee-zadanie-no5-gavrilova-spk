            <ComboBoxItem x:Name="_06" Content="Июнь"/>
            <ComboBoxItem x:Name="_07" Content="Июль"/>
            <ComboBoxItem x:Name="_08" Content="Август"/>
            <ComboBoxItem x:Name="_09" Content="Сентябрь"/>
            <ComboBoxItem x:Name="_10" Content="Октябрь"/>
            <ComboBoxItem x:Name="_11" Content="Ноябрь"/>
            <ComboBoxItem x:Name="_12" Content="Декабрь"/>
        </ComboBox>
        <TextBox x:Name="txt_OutPut" HorizontalAlignment="Left" Height="43" Margin="89.6,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307" IsReadOnlyCaretVisible="True" FontSize="20" BorderBrush="White" Grid.Column="1" Background="White">
            <TextBox.SelectionBrush>
                <ImageBrush/>
            </TextBox.SelectionBrush>
        </TextBox>
        <Button x:Name="btm_save" Content="Сохранить" HorizontalAlignment="Left" Margin="425.6,311,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click_1" IsEnabled="False" FontSize="20" Height="46" Grid.Column="1" Visibility="Hidden"/>
        <TextBlock HorizontalAlignment="Left" Margin="306.6,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="200" FontSize="20" Grid.Column="1"><Run Text="а"/><Run Text=" я все ещё учу "/><Run Text="C#"/></TextBlock>
        <Image Margin="0,216,321.6,0.2" Source="Все ещё.jpg" Stretch="Fill" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
