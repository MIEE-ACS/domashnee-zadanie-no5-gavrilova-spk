        mc:Ignorable="d"
        Title="MainWindow" Height="410.8" Width="648">
    <Grid Margin="0,0,4,0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="29.6,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"><Run FontSize="22" Text="Уже "/></TextBlock>
        <TextBox x:Name="ch_day" HorizontalAlignment="Left" Height="29" Margin="68.6,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" FontSize="20" Grid.Column="1" Visibility="Hidden" Cursor="Pen"/>
